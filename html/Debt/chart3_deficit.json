{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "UK Public Sector Current Budget Deficit",
  
    "title": {
    "text": "UK Public Sector Current Budget Deficit",
    "subtitle": "(excluding public sector banks) in £ Billion // ONS // (Jan 2000 - Dec 2020)",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },

    "width": 300,
    "height": 125,
  
    "data": {
      "url": "DeficitNet.csv",
      "format": {"type": "csv"}
    },
    "transform": [{"filter": {"field": "type", "equal": "pscbd"}}, {"calculate": "datum.milliongdp/1000", "as": "billionGBP"}],
    "params":[
        {
            "name": "hover",
            "select": {"type": "point", "encodings": ["x"], "nearest":true, "on": "mouseover"}
        }
    ],
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "timeUnit": "year",
            "title": "Year",
            "axis": {
              "format": "%Y",
              "ticks":false}},
        "y": {"field": "billionGBP", "type": "quantitative", "title": "Billion £ GBP"},
        "color": {
            "condition": {
                "param": "hover",
                "type": "nominal"
            },
            "value": "grey"
        },
        "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2}},
    "layer": [
        {"mark":{"type": "bar", "tooltip":{"content": "encoding"}}}
        
    ]

}
    