{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "UK energy consumption by source",
  
    "title": {
    "text": "UK Energy Trends - Inland Energy Consumption",
    "subtitle": "DBEIS/ONS - (in Million tonnes of oil equivalent)",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
    "width":500,
    "height":350,
  
    "data": {
      "url": "https://data.nasdaq.com/api/v3/datasets/BOE/IUDBEDR.csv?api_key=BZDJfBXG9Vi99jUcfmHz",
      "format": {"type": "csv"}
    },
  
    "layer": [
    {
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "title": "Year",
          "axis": {
            "format": "%Y",
            "ticks":false}},
  
        "y": {"field": "Value", "type": "quantitative", "title": "Trillion Â£"}
      },
      "layer": [
        {"mark": {"type":"line"}},
        {
          "params": [{
            "name": "label",
            "select": {
              "type": "point",
              "encodings": ["x"],
              "nearest": true,
              "on": "mouseover"
            }
          }],
          "mark": "point",
          "encoding": {
            "opacity": {
              "condition": {
                "param": "label",
                "empty": false,
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "transform": [{"filter": {"param": "label", "empty": false}}],
      "layer": [{
          "mark": {"type": "rule", "color": "gray"},
          "encoding": {
            "x": {"type": "temporal", "field": "Date", "aggregate": "min"}
          }
        },
        {
          "encoding": {
            "text": {"type": "quantitative","field": "Value"},
            "x": {"type": "temporal", "aggregate": "min", "field": "Date"},
            "y": {"type": "quantitative", "field": "Value"}
          },
          "layer": [
            {
              "mark": {
                "type": "text",
                "stroke": "white",
                "strokeWidth": 2,
                "align": "left",
                "dx": 10,
                "dy": -10
              }
            },
            {
              "mark": {"type": "text", "align": "left", "dx": 10, "dy": -10, "stroke": "dodgerblue"}
            }
          ]
        }
      ]
    }
      
    
    ]  
  }