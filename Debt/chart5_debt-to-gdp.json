{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "UK energy consumption by source",
  
    "title": {
    "text": "UK Energy Trends - Inland Energy Consumption",
    "subtitle": "DBEIS/ONS - (in Million tonnes of oil equivalent)",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },

    "width": "container",
    "height": 1500,
  
    "data": {
      "url": "Debt-to-GDP.csv",
      "format": {"type": "csv"}
    },
    "params":[
        {
            "name": "hover",
            "select": {"type": "point", "encodings": ["y"], "nearest":true, "on": "mouseover"}
        }
    ],
    "encoding": {
        "y": {
            "field": "Country",
            "type": "ordinal",
            "title": "Year",
            "sort": {"field": "Debt-to-GDP", "order":"descending"},
            "axis": {
                "labelFontSize": 6
            }
        },
        "x": {"field": "Debt-to-GDP", "type": "quantitative",  "title": "Million tonnes"},
        "color": {
            "condition": {
                "param": "hover",
                "type": "nominal"
            },
            "value": "grey"
        },
        "tooltip": [
            {"field": "rank", "title": "Rank"},
            {"field": "Debt-to-GDP"}, 
            {"field": "Country"}],
        "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2}},
        "transform": [ {"filter":{"field": "Debt-to-GDP", "gt":10}}, {"sort": [{"order":"descending", "field": "Debt-to-GDP"}], "window": [{"field": "Debt-to-GDP", "as": "rank", "op":"rank"}], "frame": [null, null]}], 
    "layer": [
        
        {"mark":{"type": "bar", "tooltip":{"content": "encoding"}}}
        
    ]

}
    